# Production Environment Configuration
ENVIRONMENT=production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Database Configuration
DATABASE_URL=postgresql://edagent:${DB_PASSWORD}@db:5432/edagent
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_TTL=7200

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/edagent-production.log

# AI Service Configuration
GEMINI_MODEL_CHAT=gemini-1.5-flash
GEMINI_MODEL_REASONING=gemini-1.5-pro
GEMINI_TEMPERATURE_CHAT=0.7
GEMINI_TEMPERATURE_REASONING=0.3
GEMINI_MAX_TOKENS_RESPONSE=1000
GEMINI_MAX_TOKENS_LEARNING_PATH=2000

# Rate Limiting (stricter for production)
RATE_LIMIT_RPM=30
RATE_LIMIT_BURST=5

# Content Configuration
YOUTUBE_MAX_RESULTS=15
CONTENT_CACHE_TTL=7200

# Security
SESSION_EXPIRE_MINUTES=1440

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Health Check
HEALTH_CHECK_TIMEOUT=30