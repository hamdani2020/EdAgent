# Staging Environment Configuration
ENVIRONMENT=staging

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Database Configuration
DATABASE_URL=postgresql://edagent:${DB_PASSWORD}@localhost:5432/edagent_staging
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/1
REDIS_TTL=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/edagent-staging.log

# AI Service Configuration
GEMINI_MODEL_CHAT=gemini-1.5-flash
GEMINI_MODEL_REASONING=gemini-1.5-pro
GEMINI_TEMPERATURE_CHAT=0.7
GEMINI_TEMPERATURE_REASONING=0.3

# Rate Limiting
RATE_LIMIT_RPM=60
RATE_LIMIT_BURST=10

# Content Configuration
YOUTUBE_MAX_RESULTS=10
CONTENT_CACHE_TTL=3600

# Security
SESSION_EXPIRE_MINUTES=720

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Health Check
HEALTH_CHECK_TIMEOUT=30